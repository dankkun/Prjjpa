{{>layouts/header}}

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
    </tr>
  </thead>
  <tbody>
  	{{ #articlelist }}  {{!  <- 이게 배열이면 배열처럼 알아서 반복되는 구조}}
    <tr>
      <th scope="row">{{ id }}</th>
      <td><a href="/articles/{{ id }}">{{ title }}</a></td>
      <td>{{ content }}</td>
    </tr>
    {{ /articlelist }}
  </tbody>
</table>

<a href="/articles/writeform" class="btn btn-success">새글쓰기</a>

{{>layouts/footer}}